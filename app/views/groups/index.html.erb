<div class="wrapper">
  <div class='side-bar'>
    <%= render "shared/side_bar" %>
  </div>
  <div class='group-page'>
    <div class="group-new">
      <%= link_to 'グループ新規作成', new_group_path %>
    </div>
    <% current_user.groups.each do |group| %>
    <div class="group-infomation">
      <% if group.image.present? %>
        <%= link_to image_tag(group.image, class:"post-icon"), group_chats_path(group), data: {"turbolinks" => false}%>
      <% else %>
        <%= link_to image_tag("profile.png", class:"post-icon "), group_chats_path(group), data: {"turbolinks" => false}%>
      <% end %>
      <div class="group-name-list">
        <%= link_to group.group_name, group_chats_path(group), data: {"turbolinks" => false}%>
      </div>
      <% unless GroupUser.find_by(user_id: current_user.id, group_id: group.id).permit %>
        <%= link_to '参加', group_users_participate_path(group_id: group.id), data: {"turbolinks" => false}%>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class='left-bar'>
    <%= render "shared/left_bar" %>
  <div>
</div>