<div class='post-header'>

</div>

<div class='post-main'>
  <%= render partial: "post" %>
</div>

<%= form_with model: @post, class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_area :text, class: 'form-text', placeholder: '投稿しよう！', rows:"10", wrap:"soft" %>
    <label class="form-image">
      <%= image_tag("image.png", class:"image-icon") %>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '投稿', class: 'form-send' %>
<% end %>