<div class='post-header'>
 <div class="page-title">ホーム</div>
  <%= form_with model: @post, class: 'form' do |f| %>
    <div class="form-input">
      <%= f.text_area :text, class: 'form-textarea', placeholder: '投稿しよう！', rows:"10", wrap:"soft" %>
      <div class="form-action">
        <label class="form-image">
          <i class="far fa-image image-icon"></i>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
        <%= f.submit '投稿', class: 'form-send' %>
      </div>
    </div>
  <% end %>
</div>

<div class='post-main jscroll'>
  <%= render partial: "post" %>
</div>