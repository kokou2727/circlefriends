<div class="chats_list">
  <% @chats.each do |chat| %>
    <p>
      <%= chat.user.name %>
      <div class="date">
        <%= time_ago_in_words(chat.created_at) %>前
      </div>
      <%= chat.message %>
      <%= image_tag chat.image, class: 'post-image' if chat.image.attached? %>
    </p>
  <% end %>
</div>