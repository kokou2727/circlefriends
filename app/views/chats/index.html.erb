<div class="wrapper">
  <div class='side-bar'>
    <%= render "shared/side_bar" %>
  </div>

  <div class='chats'>
    <div class='chats-header'>
      <%= @group.group_name %>
      <%= link_to "招待", users_path(current_user)%>
      <%= link_to '退出', group_user_path(@group, group_id: @group.id), method: :delete %>
      <%= link_to "削除", group_path(@group), method: :delete %>
      <%= link_to "通話", group_path(@group) %>
    </div>
    <div class='chats-main'>
      <div class='chat-group'>
        <p class='chat-group-introduction'><%= @group.group_name %>のチャットルームです</p>
      </div>
      <%= render "message" %>
    </div>
    <div class='chat-form'>
      <form>
        <input type="hidden" id="user_group" data-group_id="<%= @group.id %>" data-user_id="<%= current_user.id %>">
        <textarea class='message-input-area' id="message-form" placeholder="new message" rows="2" wrap="soft"></textarea>
      </form>
    </div>
  </div>

  <div class='left-bar'>
    <%= render "shared/left_bar" %>
  <div>
</div>